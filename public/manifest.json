{
  "name": "LeetCode-exten",
  "description": "LeetCode 网页扩展",
  "version": "0.0.20",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; script-src-elem 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self'"
  },
  "permissions": ["storage", "scripting", "background", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["/content.bundle.js", "/*.map"],
      "matches": ["*://leetcode-cn.com/*"]
    }
  ],
  "host_permissions": ["https://leetcode-cn.com/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode-cn.com/*"],
      "js": ["content-load.bundle.js"]
    }
  ],
  "background": { "service_worker": "background.bundle.js" }
}
